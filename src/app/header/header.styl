.header
  height 64px
  width 100%
  background-color #333

.content
  max-width 960px
  margin 0 auto
  a
    text-decoration none

  span
    font-size 24px
    color #fff
    line-height 64px

  .menu
    float right

    span
      line-height 64px
      font-size 16px
      cursor pointer

    .sign
      font-size .8rem
      margin-left 1.2rem
      background-color #999
      display inline-block
      padding 0.5rem 1.2rem
      border-radius 4px
      color aliceblue
      cursor pointer
      &:hover
        background-color #777

