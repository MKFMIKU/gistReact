.containerSign
  width 100%
  height 100%
  background-color #f9f9f9

  .main
    max-width 540px
    height auto
    text-align center
    padding-top 64px
    margin 0 auto
    .logo
      display block
      font-size 2rem
      margin 0
    .des
      color #666
    .form
      max-width 320px
      margin 1rem auto
      input
        margin-bottom  1rem
        border 1px solid #d6d6d6
        border-radius 4px
        background white
        color: #333333;
        width 100%
        font-size 16px
        line-height 1.25
        height 34px
        padding 1px 15px
      a
        color #0070c9
        text-decoration none
        &:hover
          text-decoration underline
      p
        color #333
